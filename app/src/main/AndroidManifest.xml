        </activity>
        <activity android:name=".ViewPagerActivity"/>
        <activity android:name=".ListViewActivity" />
        <activity android:name=".RecyclerViewActivity" />
        <activity android:name=".HeaderFooterActivity" />
    </application>

</manifest>
